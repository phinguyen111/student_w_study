{
  "buildCommand": "npm run build --prefix frontend",
  "devCommand": "npm run dev --prefix frontend",
  "installCommand": "npm install --prefix frontend && npm install --prefix backend",
  "framework": "nextjs",
  "outputDirectory": "frontend/.next",
  "env": [
    "NEXT_PUBLIC_API_URL",
    "MONGODB_URI",
    "JWT_SECRET",
    "R2_ENDPOINT",
    "R2_BUCKET",
    "R2_REGION",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY"
  ]
}
