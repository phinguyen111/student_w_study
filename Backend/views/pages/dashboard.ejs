<!-- dashboard.ejs -->
<div class="user-info">
    <img src="<%= user.avatar %>" alt="Avatar">
    <h2>Chào <%= user.name %>!</h2>
    <span class="role"><%= user.role %></span>
    
    <!-- Conditional rendering -->
    <% if (user.isOnline) { %>
        <span class="status online">Đang online</span>
    <% } else { %>
        <span class="status offline">Offline</span>
    <% } %>
    
    <!-- Date formatting -->
    <p>Lần cuối đăng nhập: <%= user.lastLogin.toLocaleDateString('vi-VN') %></p>
</div>

<div class="stats" style="padding-top: 20px;">
<p>tổng người dùng <%= stats.totalUsers%></p>
<p>số người dùng mới <%= stats.newUser%></p>
<p>số doanh thu <%= stats.revenue%></p>
<p>số đặt hàng <%= stats.orders%></p>
</div>

<h3>đơn gần đây </h3>
<div class="recentOrders" >
    <% recentOrders.forEach( recentOrder => { %> 
        <li>
            <%= recentOrder.id %>        
            <%= recentOrder.customer %>        
            <%= recentOrder.amount %>        
            <%= recentOrder.status %>        
            <%= recentOrder.date %>  
        </li>      
        <% });
    %>
</div>
<h3>thong tin moi</h3>
<div class="infomation">
 <% notifications.forEach( noti => { %> 
        <li>
            <%= noti.message %>        
            <%= noti.type %>        
            <% if (noti.unread) { %>
                <span> đã đọc </span>
            <% } else { %>
                    <span> chưa đọc </span>
            <% } 
            %>      
        </li>      
        <% });
    %>
</div>
