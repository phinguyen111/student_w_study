<%- include('../partials/header') %>

<div class="error-container text-center py-5">
    <h1 class="display-1 text-danger">500</h1>
    <h2 class="mb-4">Lỗi máy chủ</h2>
    
    <div class="mb-4">
        <img src="https://cdn-icons-png.flaticon.com/512/6195/6195700.png" alt="500 Error" style="max-width: 200px;" class="img-fluid">
    </div>
    
    <p class="lead mb-4"><%= message || 'Đã xảy ra lỗi. Vui lòng thử lại sau.' %></p>
    
    <div class="mb-4">
        <a href="/" class="btn btn-primary me-2">
            <i class="fas fa-home"></i> Quay lại trang chủ
        </a>
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay lại trang trước
        </a>
    </div>
    
    <% if (error && Object.keys(error).length > 0) { %>
        <div class="mt-5 alert alert-danger text-start">
            <h5>Chi tiết lỗi (chỉ hiển thị trong môi trường development):</h5>
            <pre class="mb-0"><%= JSON.stringify(error, null, 2) %></pre>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>